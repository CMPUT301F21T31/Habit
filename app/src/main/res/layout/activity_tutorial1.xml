<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_tutorial1_scene"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="264dp"
        android:layout_height="227dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"

        android:text="@string/t_1"
        android:textSize="50dp"
        android:textStyle="bold" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation"
        android:layout_width="292dp"
        android:layout_height="371dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="318dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="63819-fireworks.json"

        app:lottie_loop="true"
        app:lottie_speed="0.2"></com.airbnb.lottie.LottieAnimationView>

    <EditText
        android:id="@+id/t_1t"
        android:layout_width="273dp"
        android:layout_height="117dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="271dp"

        android:ems="10"
        android:hint="Enter your name here"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/t_1b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="208dp"
        android:background="@color/Bright_Blue"
        android:text="->" />

    <Button
        android:id="@+id/goTo_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="154dp"
        android:layout_marginEnd="169dp"
        android:layout_marginBottom="135dp"
        android:background="@color/Medium_Gray_Background"
        android:text="Skip Tutorial" />

    <Button
        android:id="@+id/test_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="162dp"
        android:layout_marginBottom="77dp"
        android:text="test_map" />

    <Button
        android:id="@+id/cameratest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="cameratest" />

</RelativeLayout>
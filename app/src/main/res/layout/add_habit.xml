<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Dark_Gray_Background"
    android:orientation="vertical">

    <EditText
        android:id="@+id/end_day"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:background="@drawable/rounded_corners_user_input"
        android:gravity="center"
        android:hint="DD"
        android:inputType="date"
        android:textColor="@color/Lighter_Gray_Text"
        android:textColorHint="@color/Lighter_Gray_Text"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="414dp"></EditText>

    <EditText
        android:id="@+id/end_year"
        android:layout_width="52dp"
        android:layout_height="25dp"
        android:background="@drawable/rounded_corners_user_input"
        android:gravity="center"
        android:hint="YYYY"
        android:inputType="date"
        android:textColor="@color/Lighter_Gray_Text"
        android:textColorHint="@color/Lighter_Gray_Text"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="414dp"></EditText>

    <EditText
        android:id="@+id/end_month"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:background="@drawable/rounded_corners_user_input"
        android:gravity="center"
        android:hint="MM"
        android:inputType="date"
        android:textColor="@color/Lighter_Gray_Text"
        android:textColorHint="@color/Lighter_Gray_Text"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="414dp"></EditText>

    <TextView
        android:layout_width="8dp"
        android:layout_height="25dp"
        android:text="/"
        android:textColor="@color/Lighter_Gray_Text"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="414dp"></TextView>

    <TextView
        android:layout_width="8dp"
        android:layout_height="25dp"
        android:text="/"
        android:textColor="@color/Lighter_Gray_Text"
        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="414dp"></TextView>

    <EditText
        android:id="@+id/habit_title"
        android:layout_width="149dp"
        android:layout_height="43dp"
        android:background="@drawable/rounded_corners_user_input"
        android:gravity="center"
        android:hint="Habit Title"
        android:textColor="@color/Lighter_Gray_Text"
        android:textColorHint="@color/Lighter_Gray_Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="130dp"></EditText>

    <EditText
        android:id="@+id/habit_reason"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_corners_user_input"
        android:gravity="center"
        android:hint="Habit Reason"
        android:textColor="@color/Lighter_Gray_Text"
        android:textColorHint="@color/Lighter_Gray_Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="196dp"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textColor="@color/Light_Gray_Text_Background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="282dp"></TextView>

    <EditText
        android:id="@+id/start_day"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:background="@drawable/rounded_corners_user_input"
        android:gravity="center"
        android:hint="DD"
        android:inputType="date"
        android:textColor="@color/Lighter_Gray_Text"
        android:textColorHint="@color/Lighter_Gray_Text"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="308dp"></EditText>

    <EditText
        android:id="@+id/start_year"
        android:layout_width="52dp"
        android:layout_height="25dp"
        android:background="@drawable/rounded_corners_user_input"
        android:gravity="center"
        android:hint="YYYY"
        android:inputType="date"
        android:textColor="@color/Lighter_Gray_Text"
        android:textColorHint="@color/Lighter_Gray_Text"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="308dp"></EditText>

    <EditText
        android:id="@+id/start_month"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:background="@drawable/rounded_corners_user_input"
        android:gravity="center"
        android:hint="MM"
        android:inputType="date"
        android:textColor="@color/Lighter_Gray_Text"
        android:textColorHint="@color/Lighter_Gray_Text"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="308dp"></EditText>

    <TextView
        android:layout_width="8dp"
        android:layout_height="25dp"
        android:text="/"
        android:textColor="@color/Lighter_Gray_Text"
        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="308dp"></TextView>

    <TextView
        android:layout_width="8dp"
        android:layout_height="25dp"
        android:text="/"
        android:textColor="@color/Lighter_Gray_Text"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="308dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recurrence"
        android:textColor="@color/Light_Gray_Text_Background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="481dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End"
        android:textColor="@color/Light_Gray_Text_Background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="386dp">
    </TextView>

    <Button
        android:id="@+id/monday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:text="M"
        android:textColor="@color/Lighter_Gray_Text"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/tuesday"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="509dp" />

    <Button
        android:id="@+id/friday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:text="F"
        android:textColor="@color/Lighter_Gray_Text"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/saturday"
        app:layout_constraintStart_toEndOf="@+id/thursday"
        tools:layout_editor_absoluteY="509dp" />

    <Button
        android:id="@+id/sunday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:text="S"
        android:textColor="@color/Lighter_Gray_Text"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/saturday"
        tools:layout_editor_absoluteY="509dp" />

    <Button
        android:id="@+id/thursday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:text="T"
        android:textColor="@color/Lighter_Gray_Text"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/friday"
        app:layout_constraintStart_toEndOf="@+id/wednesday"
        tools:layout_editor_absoluteY="509dp" />

    <Button
        android:id="@+id/saturday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:text="S"
        android:textColor="@color/Lighter_Gray_Text"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/sunday"
        app:layout_constraintStart_toEndOf="@+id/friday"
        tools:layout_editor_absoluteY="509dp" />

    <Button
        android:id="@+id/tuesday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:text="T"
        android:textColor="@color/Lighter_Gray_Text"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/wednesday"
        app:layout_constraintStart_toEndOf="@+id/monday"
        tools:layout_editor_absoluteY="509dp" />

    <Button
        android:id="@+id/wednesday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:text="W"
        android:textColor="@color/Lighter_Gray_Text"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/thursday"
        app:layout_constraintStart_toEndOf="@+id/tuesday"
        tools:layout_editor_absoluteY="509dp" />


</androidx.constraintlayout.widget.ConstraintLayout>